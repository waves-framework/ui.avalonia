<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Waves.UI.Avalonia.Showcase.View.MainWindowView"
        xmlns:control="clr-namespace:Waves.UI.Avalonia.Showcase.View.Control"
        Height="768" Width="1024"
        Foreground="{DynamicResource Primary-Foreground-100-Brush}"
        Name="Main Window"
        TransparencyLevelHint="Blur"
        Title="Waves UI - Avalonia Showcase">

  <Window.Background>
    
    <SolidColorBrush Color="{DynamicResource Color-200}" 
                     Opacity="{StaticResource Opacity2}"/>
    
  </Window.Background>

  <Grid>

      <control:MainControlView Margin="0" 
                               DataContext="{Binding}"/>

  </Grid>

</Window>
