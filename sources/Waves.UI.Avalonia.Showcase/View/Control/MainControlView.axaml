<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Waves.UI.Avalonia.Showcase.View.Control.MainControlView">

  <UserControl.Resources>

    <ResourceDictionary>

      <ResourceDictionary.MergedDictionaries>

        <ResourceInclude Source="avares://Waves.UI.Avalonia.Showcase/View/Templates/Tabs.axaml" />

      </ResourceDictionary.MergedDictionaries>

    </ResourceDictionary>

  </UserControl.Resources>

  <Grid>

    <Grid.RowDefinitions>
      <RowDefinition Height="120"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <Grid Grid.Row="0">

      <TabControl TabStripPlacement="Top"
                  Items="{Binding Presenters}"
                  SelectedItem="{Binding SelectedPresenter}"
                  SelectedContent="{Binding SelectedPresenter.View}"
                  ItemTemplate="{StaticResource TabDataTemplate}"/>

    </Grid>

  </Grid>
    
</UserControl>
