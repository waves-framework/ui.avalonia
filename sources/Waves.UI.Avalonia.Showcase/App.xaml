<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Waves.UI.Avalonia.Showcase.App"
             Name="Waves Avalonia UI Showcase">
    
    <Application.Styles>
        <!-- 
        Note: In this project, the <StyleInclude /> line below has no affect.
        This happens because we override the styles in the main window styles 
        section, see the 'MainWindowViewModel.cs' file for more info.
        -->
        <StyleInclude Source="avares://Waves.UI.Avalonia/Core.xaml"/>

        <StyleInclude Source="avares://Waves.UI.Avalonia/Colors/Primary.Light.xaml"/>
        <StyleInclude Source="avares://Waves.UI.Avalonia/Colors/Accent.Ronchi.xaml"/>
        <StyleInclude Source="avares://Waves.UI.Avalonia/Colors/Miscellaneous.Classic.xaml"/>
        
    </Application.Styles>
    
    <NativeMenu.Menu>
        
        <NativeMenu>
            <NativeMenuItem Header="About Waves UI" />
        </NativeMenu>
        
    </NativeMenu.Menu>
    
</Application>
