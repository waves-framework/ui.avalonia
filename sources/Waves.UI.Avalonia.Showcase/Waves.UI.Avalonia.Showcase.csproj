<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
  </PropertyGroup>

  <Import Project="..\..\props\Waves.UI.Avalonia.props" />

  <ItemGroup>
    <PackageReference Include="Avalonia" Version="0.10.0-preview6" />
    <PackageReference Include="Avalonia.ReactiveUI" Version="0.10.0-preview6" />
    <PackageReference Include="Avalonia.LinuxFramebuffer" Version="0.10.0-preview6" />
    <PackageReference Include="Avalonia.Desktop" Version="0.10.0-preview6" />
    <PackageReference Include="ReactiveUI.Validation" Version="1.8.6" />
    <PackageReference Include="ReactiveUI.Fody" Version="12.1.5" />
  </ItemGroup>
  
  <ItemGroup>
    <Compile Update="**\*.xaml.cs">
      <DependentUpon>%(Filename)</DependentUpon>
    </Compile>
    <AvaloniaResource Include="**\*.xaml">
      <SubType>Designer</SubType>
    </AvaloniaResource>
    <Compile Update="View\Control\Tabs\ThemeTabView.axaml.cs">
      <DependentUpon>ThemeTabView.axaml</DependentUpon>
      <SubType>Code</SubType>
    </Compile>
    <Compile Update="View\Control\Tabs\CheckBoxesTabView.axaml.cs">
      <DependentUpon>CheckBoxesTabView.axaml</DependentUpon>
      <SubType>Code</SubType>
    </Compile>
    <Compile Update="View\Control\Tabs\ComboBoxesTabView.axaml.cs">
      <DependentUpon>ComboBoxesTabView.axaml</DependentUpon>
      <SubType>Code</SubType>
    </Compile>
    <Compile Update="View\Control\Tabs\ChartingTabView.axaml.cs">
      <DependentUpon>ChartingTabView.axaml</DependentUpon>
      <SubType>Code</SubType>
    </Compile>
  </ItemGroup>
  
  <ItemGroup>
    <AvaloniaXaml Remove="View\Templates\Tabs.axaml" />
  </ItemGroup>
  
  <ItemGroup>
    <AvaloniaResource Include="View\Templates\Tabs.axaml">
      <Generator>MSBuild:Compile</Generator>
    </AvaloniaResource>
  </ItemGroup>
  
  <ItemGroup>
    <ProjectReference Include="..\..\..\core\sources\Waves.Core.Base\Waves.Core.Base.csproj" />
    <ProjectReference Include="..\Waves.UI.Avalonia\Waves.UI.Avalonia.csproj" />
    <ProjectReference Include="..\Waves.UI.Showcase.Common\Waves.UI.Showcase.Common.csproj" />
  </ItemGroup>

</Project>
